{
  "name": "TaskNotificationAgent",
  "type": "notification_service",
  "config": {
    "channels": [
      "browser",
      "email",
      "push"
    ],
    "triggers": {
      "dueDate": "before",
      "overdue": "immediate",
      "reminder": "custom"
    },
    "settings": {
      "sound": true,
      "vibration": true,
      "badge": true
    }
  }
}