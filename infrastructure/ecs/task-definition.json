{
  "family": "t-developer-agents",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "4096",
  "memory": "8192",
  "taskRoleArn": "arn:aws:iam::ACCOUNT:role/t-developer-task-role",
  "executionRoleArn": "arn:aws:iam::ACCOUNT:role/t-developer-execution-role",
  
  "containerDefinitions": [
    {
      "name": "analysis-agents",
      "image": "ACCOUNT.dkr.ecr.REGION.amazonaws.com/t-developer/analysis:latest",
      "cpu": 1024,
      "memory": 2048,
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8001,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "AGENT_GROUP",
          "value": "ANALYSIS"
        },
        {
          "name": "AGENTS",
          "value": "nl_input,ui_selection,parser"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/t-developer",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "analysis"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:8001/health || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3
      }
    },
    
    {
      "name": "decision-agents",
      "image": "ACCOUNT.dkr.ecr.REGION.amazonaws.com/t-developer/decision:latest",
      "cpu": 1024,
      "memory": 2048,
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8002,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "AGENT_GROUP",
          "value": "DECISION"
        },
        {
          "name": "AGENTS",
          "value": "component_decision,match_rate,search"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/t-developer",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "decision"
        }
      }
    },
    
    {
      "name": "generation-agents",
      "image": "ACCOUNT.dkr.ecr.REGION.amazonaws.com/t-developer/generation:latest",
      "cpu": 2048,
      "memory": 4096,
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8003,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "AGENT_GROUP",
          "value": "GENERATION"
        },
        {
          "name": "AGENTS",
          "value": "generation,assembly,download"
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "efs-volume",
          "containerPath": "/app/generated"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/t-developer",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "generation"
        }
      }
    }
  ],
  
  "volumes": [
    {
      "name": "efs-volume",
      "efsVolumeConfiguration": {
        "fileSystemId": "fs-xxxxxx",
        "transitEncryption": "ENABLED",
        "authorizationConfig": {
          "accessPointId": "fsap-xxxxxx",
          "iam": "ENABLED"
        }
      }
    }
  ]
}