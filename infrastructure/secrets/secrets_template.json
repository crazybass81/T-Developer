{
  "version": "1.0",
  "description": "T-Developer Evolution System Secrets Template",
  "secrets": {
    "api_keys": {
      "openai": {
        "secret_name": "${project_name}/evolution/openai-api-key",
        "type": "SecureString",
        "kms_key": "secrets_manager",
        "rotation_enabled": false,
        "structure": {
          "api_key": "sk-...",
          "organization": "org-...",
          "model": "gpt-4",
          "max_tokens": 4096,
          "temperature": 0.7
        }
      },
      "anthropic": {
        "secret_name": "${project_name}/evolution/anthropic-api-key",
        "type": "SecureString",
        "kms_key": "secrets_manager",
        "rotation_enabled": false,
        "structure": {
          "api_key": "sk-ant-...",
          "model": "claude-3-sonnet-20240229",
          "max_tokens": 4096,
          "temperature": 0.7
        }
      }
    },
    "database": {
      "main_db": {
        "secret_name": "${project_name}/database/credentials",
        "type": "SecureString",
        "kms_key": "secrets_manager",
        "rotation_enabled": true,
        "rotation_days": 90,
        "structure": {
          "engine": "postgres",
          "host": "${db_host}",
          "port": 5432,
          "dbname": "t_developer_evolution",
          "username": "${db_user}",
          "password": "${db_password}"
        }
      }
    },
    "system": {
      "master_secret": {
        "secret_name": "${project_name}/evolution/master-secret",
        "type": "SecureString",
        "kms_key": "master",
        "rotation_enabled": true,
        "rotation_days": 30,
        "structure": {
          "master_key": "${generated_uuid}",
          "encryption_salt": "${generated_salt}",
          "system_id": "${system_identifier}"
        }
      },
      "agent_communication": {
        "secret_name": "${project_name}/agents/communication-key",
        "type": "SecureString",
        "kms_key": "secrets_manager",
        "rotation_enabled": true,
        "rotation_days": 60,
        "structure": {
          "symmetric_key": "${generated_key}",
          "algorithm": "AES-256-GCM",
          "key_derivation": "PBKDF2",
          "iterations": 100000
        }
      },
      "safety_system": {
        "secret_name": "${project_name}/safety/system-secret",
        "type": "SecureString",
        "kms_key": "safety",
        "rotation_enabled": false,
        "structure": {
          "emergency_stop_token": "${generated_token}",
          "safety_override_key": "${generated_override}",
          "rollback_authorization": "${generated_auth}"
        }
      }
    }
  },
  "environments": {
    "development": {
      "use_test_keys": true,
      "rotation_disabled": true,
      "mock_enabled": true
    },
    "staging": {
      "use_test_keys": false,
      "rotation_disabled": false,
      "mock_enabled": false
    },
    "production": {
      "use_test_keys": false,
      "rotation_disabled": false,
      "mock_enabled": false,
      "high_availability": true
    }
  },
  "security_requirements": {
    "encryption": "All secrets must be encrypted with KMS",
    "access_control": "IAM role-based access only",
    "audit_logging": "All access must be logged to CloudWatch",
    "rotation": "Production secrets must support rotation",
    "backup": "Automated backup to secure S3 bucket"
  }
}
