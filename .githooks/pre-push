#!/bin/bash
# Pre-push hook for CLAUDE.md rules checking
# Push Ï†Ñ ÏµúÏ¢Ö Í∑úÏπô Ï≤¥ÌÅ¨

echo "üîç Running final CLAUDE.md rules check before push..."

# Check if check-rules.py exists
if [ ! -f "check-rules.py" ]; then
    echo "‚ö†Ô∏è Warning: check-rules.py not found, skipping rules check"
    exit 0
fi

# Run rules check
python3 check-rules.py

# Check exit status
if [ $? -ne 0 ]; then
    echo ""
    echo "‚ö†Ô∏è Warning: Rules violations detected!"
    echo "Consider fixing these issues before pushing."
    echo ""
    # Warning only, not blocking push
fi

echo "üì§ Proceeding with push..."
exit 0