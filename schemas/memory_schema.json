{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Memory Schema",
  "description": "Schema for T-Developer learning memory storage",
  "type": "object",
  "required": [
    "id",
    "type",
    "timestamp",
    "data",
    "metadata"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^memory_[a-f0-9]{8}$",
      "description": "Unique memory identifier"
    },
    "type": {
      "type": "string",
      "enum": [
        "evolution_cycle",
        "pattern_extraction",
        "failure_analysis",
        "success_case",
        "performance_metric",
        "feedback",
        "recommendation_result",
        "knowledge_update"
      ],
      "description": "Type of memory entry"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "When memory was created"
    },
    "cycle_id": {
      "type": "string",
      "description": "Associated evolution cycle ID"
    },
    "agent_id": {
      "type": "string",
      "description": "Agent that created this memory"
    },
    "data": {
      "type": "object",
      "description": "Core memory data",
      "oneOf": [
        {
          "title": "Evolution Cycle Memory",
          "properties": {
            "phase": {"type": "string"},
            "task": {"type": "string"},
            "inputs": {"type": "object"},
            "outputs": {"type": "object"},
            "duration": {"type": "number"},
            "success": {"type": "boolean"},
            "metrics_before": {"type": "object"},
            "metrics_after": {"type": "object"},
            "patterns_used": {
              "type": "array",
              "items": {"type": "string"}
            },
            "new_patterns": {
              "type": "array",
              "items": {"type": "string"}
            }
          }
        },
        {
          "title": "Pattern Extraction Memory",
          "properties": {
            "source_cycle": {"type": "string"},
            "extracted_patterns": {
              "type": "array",
              "items": {"type": "string"}
            },
            "confidence_scores": {
              "type": "object",
              "patternProperties": {
                "^pattern_[a-f0-9]{8}$": {"type": "number"}
              }
            },
            "extraction_method": {"type": "string"}
          }
        },
        {
          "title": "Failure Analysis Memory",
          "properties": {
            "failure_type": {"type": "string"},
            "error_message": {"type": "string"},
            "stack_trace": {"type": "string"},
            "context": {"type": "object"},
            "root_cause": {"type": "string"},
            "prevention_rules": {
              "type": "array",
              "items": {"type": "string"}
            },
            "recovery_actions": {
              "type": "array",
              "items": {"type": "string"}
            }
          }
        },
        {
          "title": "Performance Metric Memory",
          "properties": {
            "metric_name": {"type": "string"},
            "value": {"type": "number"},
            "baseline": {"type": "number"},
            "improvement": {"type": "number"},
            "measurement_context": {"type": "object"}
          }
        }
      ]
    },
    "metadata": {
      "type": "object",
      "properties": {
        "importance": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Importance score (0-1)"
        },
        "retention_score": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "How long to retain this memory"
        },
        "access_count": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of times accessed"
        },
        "last_accessed": {
          "type": "string",
          "format": "date-time",
          "description": "Last access time"
        },
        "tags": {
          "type": "array",
          "items": {"type": "string"},
          "description": "Memory tags for retrieval"
        },
        "related_memories": {
          "type": "array",
          "items": {"type": "string"},
          "description": "IDs of related memories"
        },
        "source": {
          "type": "string",
          "description": "Source of this memory"
        },
        "verified": {
          "type": "boolean",
          "description": "Whether memory has been verified"
        },
        "confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Confidence in memory accuracy"
        }
      },
      "required": ["importance", "tags"]
    },
    "relationships": {
      "type": "object",
      "properties": {
        "causes": {
          "type": "array",
          "items": {"type": "string"},
          "description": "Memory IDs that caused this"
        },
        "effects": {
          "type": "array",
          "items": {"type": "string"},
          "description": "Memory IDs caused by this"
        },
        "correlations": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "memory_id": {"type": "string"},
              "correlation_strength": {"type": "number"}
            }
          },
          "description": "Correlated memories with strength"
        }
      },
      "description": "Relationships with other memories"
    },
    "expires_at": {
      "type": "string",
      "format": "date-time",
      "description": "When memory expires (optional)"
    }
  }
}
